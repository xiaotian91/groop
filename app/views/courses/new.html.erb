<%= form_for @course do |f| %>
   <%= f.label :courseName, "Course:" %> <%= f.text_field :courseName %><br/>
   <%= f.label :courseNum, "Course Number:" %> <%= f.text_field :courseNum %><br/>
   <%= f.label :instructorName, "Instructor:" %> <%= f.text_field :instructorName %>
  <br/>
   <%= f.label :courseDesc, "Description:" %> <%= f.text_area :courseDesc, cols: 80, rows: 6 %><br/>
<%= f.submit %>
<% end %>
